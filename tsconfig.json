{
  "include": ["src"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,

    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "importHelpers": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "paths": {
       "@/*": ["src/*"],
    }
  }
}
